{
    "name": "osrs-reldo-api",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start": "npm run prod",
        "start:dev": "nodemon",
        "build": "npm-run-all clean transpile",
        "server": "node ./dist-server/bin/www",
        "dev": "NODE_ENV=development npm-run-all build server",
        "prod": "NODE_ENV=production npm-run-all build server",
        "transpile": "babel ./server --out-dir dist-server",
        "clean": "rimraf dist-server",
        "test": "jest"
    },
    "dependencies": {
        "@babel/cli": "^7.16.8",
        "@babel/core": "^7.16.7",
        "@babel/preset-env": "^7.16.8",
        "@babel/runtime": "^7.16.7",
        "cookie-parser": "~1.4.4",
        "cors": "^2.8.5",
        "custom-env": "^2.0.1",
        "debug": "~2.6.9",
        "dotenv": "^14.1.0",
        "express": "~4.16.1",
        "morgan": "~1.9.1",
        "node-fetch": "^2.6.7",
        "nodemon": "^2.0.15",
        "npm-run-all": "^4.1.5",
        "osrs-json-hiscores": "^2.7.0",
        "rimraf": "^3.0.2"
    },
    "devDependencies": {
        "@babel/plugin-transform-runtime": "^7.16.8",
        "jest": "^27.4.7"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ],
        "plugins": [
            [
                "@babel/transform-runtime"
            ]
        ]
    },
    "nodemonConfig": {
        "exec": "npm run dev",
        "watch": [
            "server/*",
            "public/*"
        ],
        "ignore": [
            "**/__tests__/**",
            "*.test.js",
            "*.spec.js"
        ]
    },
    "jest": {
        "testEnvironment": "node"
    }
}
