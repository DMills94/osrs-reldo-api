{
    "name": "osrs-reldo-api",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start:dev": "nodemon",
        "server": "node ./dist-server/bin/www",
        "dev": "NODE_ENV=development npm-run-all build server",
        "prod": "NODE_ENV=production npm-run-all build server",
        "transpile": "babel ./server --out-dir dist-server",
        "clean": "rimraf dist-server",
        "test": "jest",
        "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
        "build": "tsc",
        "prestart": "npm run build",
        "start": "node ."
    },
    "dependencies": {
        "@babel/cli": "^7.16.8",
        "@babel/core": "^7.16.7",
        "@babel/plugin-transform-runtime": "^7.16.8",
        "@babel/preset-env": "^7.16.8",
        "@babel/runtime": "^7.16.7",
        "cookie-parser": "~1.4.4",
        "cors": "^2.8.5",
        "custom-env": "^2.0.1",
        "debug": "~2.6.9",
        "dotenv": "^14.1.0",
        "express": "~4.16.1",
        "morgan": "~1.9.1",
        "node-fetch": "^2.6.7",
        "nodemon": "^2.0.15",
        "npm-run-all": "^4.1.5",
        "osrs-json-hiscores": "^2.7.0",
        "pg": "^8.10.0",
        "pg-hstore": "^2.3.4",
        "rimraf": "^3.0.2",
        "sequelize": "^6.29.3"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.1",
        "@types/morgan": "^1.9.4",
        "@types/node": "^20.1.4",
        "@types/node-fetch": "^2.6.3",
        "@typescript-eslint/parser": "^5.59.5",
        "jest": "^27.4.7",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "tslint": "^6.1.3",
        "typescript": "^5.0.4"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ],
        "plugins": [
            [
                "@babel/transform-runtime"
            ]
        ]
    },
    "nodemonConfig": {
        "exec": "npm run dev",
        "watch": [
            "server/*",
            "public/*"
        ],
        "ignore": [
            "**/__tests__/**",
            "*.test.js",
            "*.spec.js"
        ]
    },
    "jest": {
        "testEnvironment": "node"
    }
}
